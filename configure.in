#                                               -*- Autoconf -*-
# Process this file with autoconf to produce a configure script.

AC_PREREQ(2.60)
AC_INIT(main.c)
AM_INIT_AUTOMAKE(freespeak, 0.1)
AC_CONFIG_SRCDIR([player_quit.c])
AC_CONFIG_HEADER([config.h])

# Checks for programs.
AC_PROG_CC
AC_PROG_LN_S
AC_PROG_MAKE_SET
AC_PROG_RANLIB

# Add check for gsm
AC_ARG_WITH(gsm,
    [ --with-gsm=<path> prefix of GSM installation. e.g. /usr/local or /usr],
    [GSM_PREFIX=$with_gsm],
    AC_MSG_ERROR([You must call configure with the --with-gsm option.
    This tells configure where to find the GSM C library and headers.
    e.g. --with-gsm=/usr/local or --with-gsm=/usr])
)
AC_SUBST(GSM_PREFIX)
GSM_LIBS="-L${GSM_PREFIX}/lib/ -lgsm"
GSM_CFLAGS="-I${GSM_PREFIX}/include"
AC_SUBST(GSM_LIBS)
AC_SUBST(GSM_CFLAGS)
CPPFLAGS="$CPPFLAGS $GSM_CFLAGS"



# Checks for libraries.
# FIXME: Replace `main' with a function in `-lm':
AC_CHECK_LIB([m], [sqrt])
AC_CHECK_LIB([gsm], [gsm_create])
AC_CHECK_LIB([speex], [speex_decoder_init])

# check for speex
PKG_CHECK_MODULES(DEPS, speex)
AC_SUBST(DEPS_CFLAGS)
AC_SUBST(DEPS_LIBS)

# Checks for header files.
AC_HEADER_STDC
AC_CHECK_HEADERS([arpa/inet.h fcntl.h limits.h malloc.h memory.h netinet/in.h stdint.h stdlib.h string.h strings.h sys/socket.h unistd.h utime.h])
AC_CHECK_HEADERS([gsm.h])
# Checks for typedefs, structures, and compiler characteristics.
AC_HEADER_STAT
AC_C_CONST
AC_TYPE_INT16_T
AC_TYPE_INT32_T
AC_TYPE_SIZE_T
AC_HEADER_TIME
AC_TYPE_UINT16_T
AC_TYPE_UINT32_T
AC_TYPE_UINT8_T

# Checks for library functions.
AC_FUNC_CHOWN
AC_FUNC_MALLOC
AC_FUNC_MEMCMP
AC_FUNC_REALLOC
AC_TYPE_SIGNAL
AC_FUNC_STAT
AC_FUNC_UTIME_NULL
AC_CHECK_FUNCS([bzero memset pathconf socket sqrt strchr strrchr strtol utime])

AC_CONFIG_FILES(Makefile celp/Makefile)
AC_OUTPUT
